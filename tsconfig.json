{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": { //别名配置
        "@/*":["./*"],
        "@components/*": ["components/*"],
        "@utils/*": ["utils/*"],
        "@assets/*": ["assets"],
        "@routes/*": ["routes/*"],
        "@views/*": ["views/*"],
        "@hooks/*": ["hooks/*"],
        "@api/*": ["api/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
